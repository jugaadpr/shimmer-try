<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CFD8DC"
    tools:context="com.example.shimmer_card_try.activities.Main">



        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:minHeight="100dp"
            app:cardBackgroundColor="#dddddd"
            app:cardElevation="10dp">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:id="@+id/shimmer1"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:src="@drawable/topimg" />

                <ImageView
                    android:id="@+id/card_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/card_img1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toEndOf="@id/card_img1"
                    android:minHeight="30dp"
                    android:src="@drawable/title" />

                <ImageView
                    android:id="@+id/card_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_title1"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/subtitle" />

                <ImageView
                    android:id="@+id/card_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_subtitle1"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/subtitle" />


                <ImageView
                    android:id="@+id/card_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_subtitle2"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/subtitle" />


            </RelativeLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </android.support.v7.widget.CardView>





